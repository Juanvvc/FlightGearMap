<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.juanvvc.flightgear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    >
    <com.google.android.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:apiKey="06uaFtXeb3CKS16TlHyWwsJRgWiOFWD7JFUh0Kg"
        android:clickable="true"
        android:layout_weight="70" />
    <com.juanvvc.flightgear.SmallPanelView
        android:id="@+id/panel"
        android:layout_weight="30"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:background="@drawable/panel_back"
        custom:vertical="false"
        />
</LinearLayout>